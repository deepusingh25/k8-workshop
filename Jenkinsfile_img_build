pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = "app"
        NEXUS_REGISTRY = "13.217.60.181:8081" // No http:// in docker commands
        NEXUS_CREDENTIAL_ID = "nexus-credentials-id"
    }

    stages {
        // stage('Clone Repo') {
        //     steps {
        //         // Clone the repo manually (or use `checkout` step if you prefer)
        //         sh 'git clone https://github.com/deepusingh25/k8-workshop.git'
        //     }
        // }

        // stage('Configure Git Remote') {
        //     steps {
        //         dir('k8-workshop') {
        //             sh '''
        //                 git config remote.origin.url https://github.com/deepusingh25/k8-workshop.git
        //                 git remote -v
        //             '''
        //         }
        //     }
        // }

        stage('Build Docker Image') {
            steps {
                dir('k8-workshop') {
                    sh "docker build -t ${DOCKER_IMAGE_NAME} ."
                }
            }
        }

        stage('Tag Docker Image') {
            steps {
                sh "docker tag ${DOCKER_IMAGE_NAME} ${NEXUS_REGISTRY}/repository/workshop/${DOCKER_IMAGE_NAME}:latest"
            }
        }

        stage('Push Docker Image to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: NEXUS_CREDENTIAL_ID, passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'NEXUS_USERNAME')]) {
                    sh """
                        docker login -u ${NEXUS_USERNAME} -p ${NEXUS_PASSWORD} ${NEXUS_REGISTRY}
                        docker push ${NEXUS_REGISTRY}/repository/workshop/${DOCKER_IMAGE_NAME}:latest
                    """
                }
            }
        }
    }
}
